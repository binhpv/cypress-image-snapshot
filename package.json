{
  "name": "@pkerschbaum/cypress-image-snapshot",
  "version": "4.0.1",
  "description": "Cypress bindings for jest-image-snapshot.",
  "repository": "https://github.com/pkerschbaum/cypress-image-snapshot",
  "author": "Patrick Kerschbaum <patrick.kerschbaum@gmail.com>, Jack Cross <jack@palmer.net>",
  "license": "MIT",
  "engines": {
    "node": ">=14.18.0",
    "yarn": "^1.22.5"
  },
  "scripts": {
    "prebuild": "rimraf *.js *.d.ts *.js.map *.d.ts.map",
    "build": "tsc",
    "test": "jest --no-cache",
    "lint": "eslint src",
    "prepublish": "npm run build",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.3",
    "jest-image-snapshot": "4.2.0",
    "pkg-dir": "^5.0.0",
    "term-img": "^6.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.8",
    "@changesets/cli": "^2.13.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest-image-snapshot": "^4.3.1",
    "@types/node": "^14.14.31",
    "cypress": "^8.7.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-cypress": "^2.1.3",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^1.8.0",
    "rimraf": "^2.6.2",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "cypress": "^8.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/examples/",
      "<rootDir>/node_modules/"
    ]
  }
}
